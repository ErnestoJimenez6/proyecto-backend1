<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{product.title}} - Librería Especulativa</title>
        <link rel="stylesheet" href="/css/styles.css">
        <!-- Agrega SweetAlert -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    </head>
    <body>
        <main>
            <h2 class="title">{{product.title}}</h2>
            <p>{{product.description}}</p>
            <p><strong>Género:</strong> {{product.genre}}</p>
            <p><strong>Precio:</strong> ${{product.price}}</p>
            <p><strong>Stock:</strong> {{product.stock}}</p>
            <button onclick="addToCart('{{product._id}}')">Agregar al carrito</button>
            <a href="/tienda">Volver a la tienda</a>
        </main>

        <script>
            async function getOrCreateCart(){
                try{
                    const response=await fetch('/api/carts',{
                        method:'POST'
                    })
                    return await response.json()
                }catch(error){
                    console.error('Error al obtener carrito:',error)
                    throw error
                }
            }

            async function addToCart(productId){
                try{
                    const cartResponse=await fetch('/api/carts/active')
                    let cart
                    
                    if(cartResponse.ok){
                        cart=await cartResponse.json()
                    }else{
                        const newCart=await getOrCreateCart()
                        cart=newCart
                    }

                    const response=await fetch(`/api/carts/${cart._id}/products/${productId}`,{
                        method:'POST',
                        headers:{
                            'Content-Type':'application/json'
                        }
                    })

                    if(!response.ok){
                        const error=await response.json()
                        throw new Error(error.message||'Error al agregar al carrito');
                    }

                    Swal.fire({
                        icon:'success',
                        title:'Producto agregado',
                        showConfirmButton:false,
                        timer:1500
                    })

                }catch(error){
                    Swal.fire({
                        icon:'error',
                        title:'Error',
                        text:error.message
                    })
                }
            }
        </script>
    </body>
</html>